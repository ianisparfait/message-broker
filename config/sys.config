[
    {lager, [
        {log_root, "log/"},  % RÃ©pertoire des logs
        {handlers, [
            {lager_console_backend, info},
            {lager_file_backend, [
                {file, "log/error.log"},
                {level, error},
                {size, 10485760},
                {date, "$D0"},
                {count, 5}
            ]},
            {lager_file_backend, [
                {file, "log/info.log"},
                {level, info},
                {size, 10485760},
                {date, "$D0"},
                {count, 5}
            ]}
        ]},
        {error_logger_redirect, true},
        {crash_log, "log/crash.log"},
        {crash_log_msg_size, 65536},
        {crash_log_size, 10485760},
        {crash_log_date, "$D0"},
        {crash_log_count, 5}
    ]},

    {message_broker, [
        {queue_max_size, 10000},
        {worker_timeout, 5000},
        {default_processor, undefined},
        {allow_remote_connections, false}
    ]}
].